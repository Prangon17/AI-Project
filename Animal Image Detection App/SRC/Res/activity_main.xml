<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p"
    android:scaleType="centerCrop"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Image Detection"
        android:textColor="#FFC107"
        android:textAlignment="center"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageView"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/r"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:layout_below="@id/imageView"
        android:id="@+id/selectBtn"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="capture"
        android:layout_below="@id/selectBtn"
        android:id="@+id/captureBtn"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="predict"
        android:layout_below="@id/captureBtn"
        android:id="@+id/predictBtn"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Result : "
        android:textColor="#DD0808"
        android:id="@+id/result"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@id/predictBtn"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/aboutTitle"
        android:textSize="24sp"
        android:textColor="#C1D6AF"
        android:textAlignment="center"
        android:layout_below="@id/result"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/aboutDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutTitle"
        android:layout_marginTop="-3dp"
        android:text="Developer\nName: Prangon and Manik \n@copy right 2023"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#CDDC39" />

</RelativeLayout>
